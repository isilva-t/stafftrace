# StaffTrace Backend Secrets - Kubernetes Secret Template
# Copy this file to backend-secret.yaml and replace all placeholder values with real secrets
#
# IMPORTANT: This file contains sensitive credentials
# - Do NOT commit backend-secret.yaml to git
# - Add backend-secret.yaml to .gitignore
# - Only commit this .example template
#
# Apply to cluster with: kubectl apply -f backend-secret.yaml

apiVersion: v1
kind: Secret
metadata:
  name: backend-secrets
type: Opaque
stringData:
  # MongoDB Atlas Connection String
  # Format: mongodb+srv://USERNAME:PASSWORD@CLUSTER.mongodb.net/DATABASE?options
  # Get this from MongoDB Atlas dashboard -> Connect -> Connect your application
  # Include: retryWrites=true&w=majority&appName=YourAppName
  MONGODB_URI: "mongodb+srv://your-username:your-password@your-cluster.mongodb.net/presence_monitor?retryWrites=true&w=majority&appName=Cluster0"
  
  # JWT Secret for Authentication
  # CRITICAL: Must be 32+ characters, use strong random string
  # Generate with: openssl rand -hex 32
  # IMPORTANT: This must match the JWT_SECRET in cloud/.env for local development
  JWT_SECRET: "your-jwt-secret-generate-with-openssl-rand-hex-32-minimum-length"
  
  # Admin Credentials
  # Used for login to access real employee data via Angular frontend
  # In production: Use strong, unique credentials different from development
  ADMIN_USERNAME: "admin"
  ADMIN_PASSWORD: "your-secure-admin-password"
  
  # Agent Authentication Token
  # Generate with: openssl rand -base64 32
  # CRITICAL: This must match the AGENT_AUTH_TOKEN in agent/.env
  # Used to authenticate Django agent when sending data to Spring Boot backend
  AGENT_AUTH_TOKEN: "your-auth-token-must-match-agent-env-file"
