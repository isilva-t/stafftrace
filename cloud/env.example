# StaffTrace Cloud Services - Environment Configuration Template
# Copy this file to .env and replace all placeholder values with real secrets

# Data Storage Path
# Uses $USER variable to automatically use your home directory
DATA_PATH=/home/$USER/stafftrace/data/cloud

# Frontend Configuration
# Dockerfile.dev for development (hot reload), Dockerfile for production
FRONTEND_DOCKERFILE=Dockerfile.dev
# Port 4200 for development, 80 for production
FRONTEND_PORT=4200
# API proxy path - /api for nginx proxy, or full URL for direct access
API_URL=/api

# MongoDB Connection
# For docker-compose: use service name 'mongodb'
# For production: use MongoDB Atlas connection string
# Example Atlas: mongodb+srv://user:password@cluster.mongodb.net/presence_monitor
MONGODB_URI=mongodb://mongodb:27017/presence_monitor

# JWT Secret for Authentication
# CRITICAL: Must be 32+ characters, use strong random string
# Generate with: openssl rand -hex 32
# IMPORTANT: This must match across all backend instances
JWT_SECRET=your-jwt-secret-generate-with-openssl-rand-hex-32

# Agent Authentication Token
# Generate with: openssl rand -base64 32
# IMPORTANT: This must match the AGENT_AUTH_TOKEN in agent/.env
AGENT_AUTH_TOKEN=your-auth-token-must-match-agent-env-file

# Admin Credentials
# Used for login to access real employee data
# In production: Use strong, unique credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-admin-password

# Backend Server Port
SERVER_PORT=8080

# MongoDB Express (Optional - Database Web UI)
# Connection URL for mongo-express container
ME_CONFIG_MONGODB_URL=mongodb://mongodb:27017/
# Set to true to enable basic auth on mongo-express
ME_CONFIG_BASICAUTH=false
