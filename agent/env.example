# StaffTrace Django Agent - Environment Configuration Template
# Copy this file to .env and replace all placeholder values with real secrets

# Data Storage Path
# Uses $USER variable to automatically use your home directory
DATA_PATH=/home/$USER/data_agent

# Django Settings
# Generate with: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-django-secret-key-generate-random-string-min-50-chars

# Set to False in production
DEBUG=True

# Comma-separated list of allowed hosts
# Production: Add your domain name or public IP
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (PostgreSQL)
# For docker-compose: use service name 'postgres'
# For local: use 'localhost'
DATABASE_NAME=presence_monitor
DATABASE_USER=postgres
DATABASE_PASSWORD=your-secure-database-password
DATABASE_HOST=postgres
DATABASE_PORT=5432

# Celery / Redis
# For docker-compose: use service name 'redis'
# For local: use 'localhost'
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Agent Authentication Token
# Generate with: openssl rand -base64 32
AGENT_AUTH_TOKEN=your-auth-token-generate-with-openssl-rand-base64-32

# Cloud API Configuration
# Production: Use HTTPS URL (e.g., https://api.stafftrace.xyz)
# Development: Can use HTTP (e.g., http://localhost:8080)
CLOUD_API_URL=https://your-backend-url.com
SITE_ID=Your Office Name

# Timezone
# See https://en.wikipedia.org/wiki/List_of_tz_database_time_zones
TZ=Europe/Lisbon

# PostgreSQL (for docker-compose service)
# These are used by the postgres container itself
POSTGRES_DB=presence_monitor
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-database-password
